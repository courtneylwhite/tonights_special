<div class="min-h-screen flex items-center justify-center bg-black text-white py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold">
        Create an Account
      </h2>
    </div>

    <div class="bg-black/80 backdrop-blur-sm border border-gray-800 rounded px-8 pt-6 pb-8 mb-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "block text-white text-sm font-medium mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                            class: "w-full bg-black/50 border border-gray-800 rounded py-2 px-3 text-white leading-tight focus:outline-none focus:border-amber-500 focus:ring-1 focus:ring-amber-500" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.password_field :password, autocomplete: "new-password",
                               class: "w-full bg-black/50 border border-gray-800 rounded py-2 px-3 text-white mb-3 leading-tight focus:outline-none focus:border-amber-500 focus:ring-1 focus:ring-amber-500" %>
        </div>

        <div class="mb-6">
          <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
                               class: "w-full bg-black/50 border border-gray-800 rounded py-2 px-3 text-white mb-3 leading-tight focus:outline-none focus:border-amber-500 focus:ring-1 focus:ring-amber-500" %>
        </div>

        <div class="flex items-center justify-between">
          <%= f.submit "Sign Up", class: "w-full bg-amber-500 hover:bg-amber-600 text-black font-medium py-2 px-4 rounded transition-colors duration-200 border border-amber-400 hover:border-amber-300" %>
        </div>
      <% end %>

      <div class="text-center mt-6">
        <%= link_to "Already have an account? Sign In!", new_user_session_path, class: "text-green-500 hover:text-green-700" %>
      </div>
    </div>
  </div>
</div>